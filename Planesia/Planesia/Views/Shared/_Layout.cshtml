<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
    <title>@ViewBag.Title - Planesia</title>
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
</head>
<body style="padding-top: 70px;">
        <div class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="/Home/Index" class="navbar-brand">Maps</a>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="/Home/Categories">Categories</a></li>
                        <li><a href="/Home/Funedugame">Fun Edu-Game</a></li>
                        <li><a href="/Home/Campaign">Campaign</a></li>
                        <li><a href="/Home/Unique">Unique</a></li>
                        <li><a href="/Home/News">News</a></li>
                        <li><a href="/Home/Contact">Contact</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        @{
                            if (Session["UserName"] != null)
                            {
                                <li><a href="">@Session["Username"]</a></li>
                                <li><a href="/Home/Logout">Log out</a></li>
                            }
                            else
                            {
                            <li><a href="/Users/Create">Register</a></li>
                            <li>
                                <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
                                    Login
                                </button>
                            </li>
                            <!-- Button trigger modal -->
                            }
                        }
                    </ul>
                            <!-- Modal -->
                            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                            <h4 class="modal-title" id="myModalLabel">Plase login</h4>
                                        </div>
                                        <div class="modal-body">
                                            <form class="navbar-form navbar-left" role="search" action="/Home/Login" method="post">
                                                <div class="form-group">
                                                    <input type="text" class="form-control" placeholder="Username" name="username">
                                                </div>
                                                <div class="form-group">
                                                    <input type="password" class="form-control" placeholder="Password" name="password">
                                                </div>
                                                <button type="submit" class="btn btn-default">Log in</button>
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                </div>
            </div>
        </div>
        <div>
            @RenderBody()
        </div>
        <footer>
            <p>&copy; @DateTime.Now.Year - Planesia</p>
        </footer>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>