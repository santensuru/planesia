    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script>
    <script>
        var map;
        var place = false;
        var selectedPosition = new google.maps.LatLng();

        $(document).ready(function () {

            initialize();

            function initialize() {
                var mapOptions =
                {
                    zoom: 5,
                    center: new google.maps.LatLng(-1, +118.75083),
                    panControl: true, 
                    zoomControl: true,
                    zoomControlOptions: {
                        style: google.maps.ZoomControlStyle.SMALL 
                    },
                    scaleControl: true, 
                    mapTypeId: google.maps.MapTypeId.ROADMAP 
                };

                map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

                google.maps.event.addListener(map, 'click', function (event) {
                    if (place)
                    {
                        placeMarker(event.latLng, map);
                    }
                });
            }
        });

        //google.maps.event.addDomListener(window, 'load', initialize);

        function placeMarker(position, map) {
            var marker = new google.maps.Marker({
                position: position,
                map: map
            });
            alert(position.lng);
            document.getElementById('latitude').innerHTML = position.lat;
            document.getElementById('longitude').innerHTML = position.lng;
            place = false;
            map.panTo(position);
        }

        function placeToggle() {
            if (!place)
            {
                alert("Click coordinate on map");
            }
            place = !place;
        }
    </script>

